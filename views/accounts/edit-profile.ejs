<% layout ('layout') -%>

<div class="row">	
	<div class="col-lg-6 col-md-offset-3">
               <% if(message.length > 0){ %>
             <div class="alert alert-success alert-dismissible">
                    <button class="close" data-dismiss="alert" role="button">
                          <span class="glyphicon glyphicon-remove"></span>
                    </button>
                    <%- message %>
             </div>

               	<% } else{ %>
                  <div class="alert alert-danger alert-dismissible">
                    <button class="close" data-dismiss="alert" role="button">
                          <span class="glyphicon glyphicon-remove"></span>
                    </button>
                    <h2>Don't know why success Message is not Showing Up ?</h2>
                    </div>
                    <% } %>
	   
		<form method="post">
		<h1>Edit Profile</h1>
		<div class="input-group input-group-lg signup-form">
		 <span class="input-group-addon">Name</span>
			<input type="text" class="form-control" name="name" value="<%= user.profile.name %>">
            </div>
            <div class="input-group input-group-lg signup-form">
            <span class="input-group-addon">Address</span>
            <input type="text" class="form-control" value="<%= user.address %>" name="address">
            </div>
            	<button type="submit" class="btn btn-success btn-lg" >Update</button>
		</form>

	</div>
</div>